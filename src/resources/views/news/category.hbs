<div class="mt-4">
    <div class="heading-category">
        <h3>{{cate.name}}</h3>
    </div>
    <div class="row mt-3">
        <div class="col-12 col-md-12 col-sm-12 col-lg-8">
            <div class="list_post_category">
                {{#each posts}}
                <div class="post-item row mt-3">
                    <div class="col-12 col-md-6 col-sm-12 col-lg-4 cover">
                         <a href="/{{this.slug}}">
                        <div style="background-image: url(/{{this.thumnail}});" class="cover-thumnail">
                        </div>
                    </a>
                    </div>
                    <div class="col-12 col-md-6 col-sm-12 col-lg-8 infor">
                        <h3><a href="/{{this.slug}}">{{this.title}}</a></h3>
                        <p class="mt-3">{{this.description}}</p>
                    </div>
                </div>
                {{else}}
                <h2 class="mt-3">Không có tin nào.....</h2>
                {{/each}}
            </div>
        </div>
        <div class="col col-lg-4">
            {{!-- content right (sidebar)--}}
            <div class="section-header">
                <h2>Tin mới nhất</h2>
            </div>

            <div class="article-list">
                {{#each sidebar}}
                <div class="row post-news">
                    <div class="col-12 col-sm-12 col-md-4 col-lg-4">
                        <div class="thumb-art">
                            <a href="/{{this.slug}}">
                                <div style="background-image: url(/{{this.thumnail}});" class="thumb-art-imgs">
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-12 col-sm-12 col-md-8  col-lg-8 ">
                        <div class="description">
                            <h3><a href="/{{this.slug}}">{{this.title}}</a> </h3>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>

</div>